    <!-- Style for Login and password enter fields -->
    <Style
    x:Key="LoginPasswordControlStyle"
    TargetType="{x:Type Control}">

        <Setter Property="Height" Value="30"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="5, 0, 0, 0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- Style for placeholder -->
    <Style
    x:Key="PlaceholderStyle"
    TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource DarkGray}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0, 0, 0, 0"/>
    </Style>

    <!-- Style for blue buttons -->
    <Style
    x:Key="BlueButtonStyle"
    TargetType="{x:Type Button}">

        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate
                TargetType="{x:Type Button}">

                    <Border
                        Name="Border"
                        BorderBrush="Black"
                        BorderThickness="3"
                        Background="{StaticResource ButtonBlue}"
                        Padding="10, 15"
                        CornerRadius="15">

                        <TextBlock
                            Name="TextBlock"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="20"
                            Text="{TemplateBinding Tag}"/>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Search panel grid style -->
    <Style
        x:Key="SearchPanelStyle"
        TargetType="{x:Type TextBox}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid
                        Height="60"
                        VerticalAlignment="Center">
                        <Border
                            Name="borderSearchPanel"
                            BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="3"
                            CornerRadius="30"
                            Padding="10"
                            Background="{StaticResource LightGrayFilling}"
                            >

                            <!-- Panel for search icon and textInput -->
                            <StackPanel
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                >

                                <!-- Search Icon -->
                                <Button
                                    Name="btnIconSearch"
                                    VerticalContentAlignment="Center"
                                    Foreground="{StaticResource DarkGray}"
                                    Style="{StaticResource IconButtonStyle}"
                                    Content="{StaticResource search}"/>

                                <!-- Input Control for Chat Name -->
                                <TextBox
                                        Name="txtSearch"
                                        FontSize="28"
                                        Margin="10, 0, 0, 0"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource DarkGray}"
                                        VerticalContentAlignment="Center"
                                        BorderThickness="0"
                                        Background="Transparent"/>

                                <!-- Text Label for search -->
                                <Label
                                        Name="lblPlaceholder"
                                        Foreground="{StaticResource DarkGray}"
                                        FontSize="28"
                                        FontWeight="SemiBold"
                                        VerticalContentAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        />
                            </StackPanel>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        
    </Style>

    <Style x:Key="UserItemViewStyle" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Border Background="Transparent" Margin="5" Padding="5" CornerRadius="5" Cursor="Hand">
                        <Grid>
                            <Image Name="UserImage" Width="50" Height="50" Margin="5" Stretch="UniformToFill" />
                            <TextBlock Name="UserNameText" Margin="60,5,5,5" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="UserImage" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#FF0080FF" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate 
        x:Key="ChatViewTemplate" 
        TargetType="Control">
        
        <Border
            Name="mainBorder"
            Background="White" 
            BorderThickness="3" 
            BorderBrush="{StaticResource BorderGray}" 
            CornerRadius="30"
            Height="80">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid
                    VerticalAlignment="Center">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    
                    <Image 
                        Grid.ColumnSpan="2"
                        Grid.RowSpan="2"
                        Margin="10,0,0,0"
                        Name="imgUser" 
                        Width="50" 
                        Height="50" 
                        Stretch="UniformToFill">
                        <Image.Clip>
                            <EllipseGeometry
                                Center="25 25"
                                RadiusX="25"
                                RadiusY="25"/>
                        </Image.Clip>
                    </Image>

                    <Ellipse
                        Grid.Column="1"
                        Grid.Row="1"
                        Name="elOnlineIndicator"  
                        Width="10" 
                        Height="10" 
                        Fill="LightGreen"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                        Margin="0,0,0,0"
                        Visibility="Collapsed"/>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,10,0">
                    <TextBlock Name="txtChatName" FontSize="20" FontWeight="Bold" Foreground="Black"/>

                    <TextBlock Name="lblLastMessage" Text="{Binding LastMessage}" FontSize="20" TextWrapping="Wrap" Foreground="{StaticResource DarkGray}"/>
                </StackPanel>
            </Grid>
        </Border>
    </ControlTemplate>

    <Style x:Key="ChatPanelStyle" TargetType="ContentControl">
        <Setter Property="Height" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">

                    <Border 
                            
                            VerticalAlignment="Top"
                            Background="White" 
                            Height="80" 
                            BorderThickness="3" 
                            BorderBrush="{StaticResource BorderGray}" 
                            HorizontalAlignment="Stretch" 
                            CornerRadius="30">
                            <StackPanel 
                                    Name="itemsPanel"
                                    Orientation="Horizontal">

                                <Grid
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="10" />
                                    </Grid.RowDefinitions>

                                    <Image 
                                        Grid.ColumnSpan="2"
                                        Grid.RowSpan="2"
                                        Name="imgChat" 
                                        Width="50" 
                                        Height="50" 
                                        Stretch="UniformToFill">

                                        <Image.Clip>
                                            <EllipseGeometry
                                                Center="25 25"
                                                RadiusX="25"
                                                RadiusY="25"/>
                                        </Image.Clip>
                                    </Image>

                                    <Ellipse 
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Name="elOnlineIndicator" 
                                        Width="10" 
                                        Height="10" 
                                        Fill="LightGreen"
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Bottom"
                                    
                                        Visibility="Collapsed"/>
                                </Grid>


                                <StackPanel VerticalAlignment="Center" Margin="10,0,10,0">
                                    <TextBlock Name="txtChatName" FontWeight="Bold" FontSize="20"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate
        x:Key="MessageInputBoxTemplate"
        TargetType="ContentControl">
        <Border
            Name="mainBorder"
            Height="80"
            BorderThickness="3"
            BorderBrush="{StaticResource BorderGray}"
            CornerRadius="30">
            <StackPanel
                Orientation="Horizontal"
                Margin="0, 10"
                VerticalAlignment="Center">

                <Button
                    Name="btnAttach"
                    
                    Style="{StaticResource IconButtonStyle}"
                    Height="100"
                    Width="80"
                    Content="{StaticResource attach}"
                    Foreground="{StaticResource DarkGray}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Left"/>

                <StackPanel
                    Name="inputPanel"
                    Orientation="Horizontal">
                        <TextBox
                            Name="inputMessageTextBox"
                    
                            Height="60"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            Background="Transparent"
                            FontSize="30"
                            FontWeight="SemiBold"
                            Foreground="Black"/>

                    <Label
                        Name="lblPlaceholder"
                        Height="60"
                        FontSize="30"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource DarkGray}"
                        Content="Введите сообщение" />
                </StackPanel>

                <Button
                    Name="btnSend"
                    
                    Style="{StaticResource IconButtonStyle}"
                    Height="100"
                    Width="80"
                    Content="{StaticResource send}"
                    Foreground="{StaticResource DarkGray}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Right"/>
            </StackPanel>
        </Border>
    </ControlTemplate>
</ResourceDictionary>