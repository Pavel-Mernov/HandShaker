<Window x:Class="HandShaker.MainWindow"
        x:Name="mainWindow"
        AllowsTransparency="True"
        WindowStyle="None"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandShaker"
        mc:Ignorable="d"
        Title="HandShaker" 
        FontSize="15"
        Height="800" 
        Width="1280"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">


    <Border 
        CornerRadius="0"
        Background="{StaticResource BlankFilling}"
        BorderThickness="3"
        BorderBrush="{StaticResource BorderGray}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Column for contact chat list -->
                <ColumnDefinition /> <!-- Conversation area -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="1"
                Width="400"
                
                >
                <Border
                    BorderBrush="{StaticResource BorderGray}"
                    BorderThickness="3"
                    Padding="20, 20, 20, 20">

                    <StackPanel
                        Orientation="Vertical">
                        
                        <!-- Search Field -->
                        <Grid
                            >
                            <Border
                                BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="3"
                                CornerRadius="15"
                                Padding="10"
                                Background="{StaticResource LightGrayFilling}">
                                
                                <!-- Panel for search icon and textInput -->
                                <StackPanel
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    >
                                    
                                    <!-- Search Icon -->
                                    <Button
                                        x:Name="btnIconSearch"
                                        VerticalContentAlignment="Center"
                                        Foreground="{StaticResource DarkGray}"
                                        Style="{StaticResource IconButtonStyle}"
                                        Content="{StaticResource search}"/>
                                    
                                    

                                    <!-- Input Control for Chat Name -->
                                    <TextBox
                                        x:Name="txtSearchChat"
                                        FontSize="28"
                                        Margin="10, 0, 0, 0"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource DarkGray}"
                                        VerticalContentAlignment="Center"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        TextChanged="TextBox_TextChanged"/>
                                    
                                    <!-- Text Label for search -->
                                    <Label
                                        x:Name="lblSearch"
                                        Foreground="{StaticResource DarkGray}"
                                        FontSize="28"
                                        FontWeight="SemiBold"
                                        VerticalContentAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        Content="Search"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Go to profile Button -->
                        <Button
                            Margin="0, 20"
                            Name="btnGoToProfile"
                            Tag="Перейти в профиль"
                            Click="btnGoToProfile_Click"
                            Style="{StaticResource BlueButtonStyle}"/>
                    </StackPanel>
                    
                </Border>
            </Grid>

            
            
            <!-- Title Bar -->
            <Border 
                Background="{StaticResource BorderGray}"
                Grid.ColumnSpan="3"
                Height="50"
                MouseDown="Border_MouseDown">
                <Grid>
                    
                    <TextBlock
                        Text="{Binding Title, ElementName=mainWindow}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        
                        FontSize="30"
                        Margin="10,0,0,0">
                    </TextBlock>
                    
                    <!-- Window Buttons-->
                    <StackPanel
                        HorizontalAlignment="Right"
                        Margin="10, 0"
                        Orientation="Horizontal">
                        <Button 
                            Name="btnMinimize" 
                            Content="{StaticResource minimize}"
                            Style="{StaticResource IconButtonStyle}" 
                            Click="btnMinimize_Click" 
                            />
                        <Button
                            x:Name="btnMaximize"
                            Content="{StaticResource maximize}"
                            Style="{StaticResource IconButtonStyle}" 
                            Click="btnMaximize_Click" 
                            />
                        <Button
                            x:Name="btnClose"
                            Content="{StaticResource close}"
                            Style="{StaticResource IconButtonStyle}" 
                            Click="btnClose_Click"
                            />
                    </StackPanel>
                </Grid>
            </Border>
            
            
        </Grid>
    </Border>
</Window>
